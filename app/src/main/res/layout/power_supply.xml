<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/drua"
             />



        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="파워서플라이"
            android:textSize="18sp"
            android:textStyle="bold" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"

            android:background="#8EC4DD"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="브랜드"
            android:layout_marginStart="20dp" />

        <Spinner
            android:id="@+id/spin_power"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:entries="@array/power_array"/>
        <TextView
            android:id="@+id/tv_result_power"
            android:layout_width="1sp"
            android:layout_height="1sp"
            android:text="드롭다운결과"
            android:textColor="#ffffff"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#8EC4DD"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="가격"
            android:textStyle="bold"
            android:textIsSelectable="false"
            android:textSize="25sp" />
        <Spinner
            android:id="@+id/spin_price_power"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:entries="@array/price_array">
        </Spinner>
        <TextView
            android:id="@+id/tv_price_power"
            android:layout_width="1sp"
            android:layout_height="1sp"
            android:text="드롭다운결과"
            android:textColor="#ffffff"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:background="#8EC4DD"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="181dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="exit"
                android:layout_marginBottom="76dp"
                android:text="뒤로가기"
                android:textColorHighlight="#17B9CE"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/butt_move_mainboard"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/butt_move_mainboard"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="76dp"
                android:text="확인"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>
